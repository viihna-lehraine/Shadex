{
	"name": "colorgen-v0.6.0",
	"version": "1.0.0",
	"author": "Viihna Lehraine",
	"license": "GNU GPL v3",
	"keywords": [],
	"type": "module",
	"description": "*** Web-based color palette generator. Produces 8 varieties of color scheme and can convert between 6 colorspaces.",
	"main": "./public/app.js",
	"scripts": {
		"build": "npm run build:tsc && npm run build:rollup",
		"build:rollup": "rollup -c",
		"build:tsc": "rm -rf ./public/js && tsc && node scripts/add-js-extensions.js",
		"format": "npx prettier . --write",
		"lint": "npx eslint",
		"lint:fix": "npx eslint --fix",
		"lint:watch": "npx eslint --watch",
		"sass": "sass --watch ./public/sass/main.sass:./public/css/main.css",
		"scan:tsc:errors": "tsc --noEmit",
		"start": "node ./public/app.js",
		"test": "jest",
		"watch:format": "npx prettier . --write --watch",
		"watch:lint": "npx eslint --watch"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@types/jest": "^29.5.14",
		"@typescript-eslint/eslint-plugin": "^8.11.0",
		"@typescript-eslint/parser": "^8.11.0",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"fake-indexeddb": "^6.0.0",
		"jest": "^29.7.0",
		"jsdom": "^25.0.1",
		"prettier": "^3.3.3",
		"replace-in-file": "^8.2.0",
		"rollup": "^4.24.3",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"idb": "^8.0.0"
	}
}
