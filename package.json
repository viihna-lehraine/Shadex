{
	"name": "colorgen",
	"version": "0.0.2",
	"author": "Viihna Lehraine",
	"license": "GNU GPL v3",
	"type": "module",
	"description": "*** Web-based color palette generator.",
	"main": "./public/dist/bundle.js",
	"scripts": {
		"build": "npm run clean && tsc && rollup -c",
		"clean": "rm -rf ./public/dist && rm -rf ./public/js && mkdir ./public/dist",
		"fix": "npm run format && npm run lint:fix",
		"format": "npx prettier . --write",
		"lint": "npx eslint",
		"lint:fix": "npx eslint --fix",
		"lint:watch": "npx eslint --watch",
		"scan:tsc:errors": "tsc --noEmit",
		"start": "node ./public/app.js",
		"test": "jest",
		"watch:format": "npx prettier . --write --watch",
		"watch:lint": "npx eslint --watch"
	},
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@typescript-eslint/eslint-plugin": "^8.11.0",
		"@typescript-eslint/parser": "^8.11.0",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"fake-indexeddb": "^6.0.0",
		"jest": "^29.7.0",
		"jsdom": "^25.0.1",
		"prettier": "^3.3.3",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"@rollup/plugin-commonjs": "^28.0.2",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-typescript": "^12.1.2",
		"idb": "^8.0.1",
		"rollup": "^4.30.1",
		"source-map-support": "^0.5.21"
	}
}
