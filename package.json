{
	"name": "shadex",
	"version": "0.0.2",
	"author": "Viihna Lehraine",
	"license": "GNU GPL v3",
	"type": "module",
	"description": "Color palette generator",
	"main": "./public/dist/bundle.js",
	"scripts": {
		"build": "pnpm run clean && pnpm exec tsc && pnpm exec rollup -c",
		"clean": "rm -rf ./public/dist && rm -rf ./public/js && mkdir ./public/dist",
		"fix": "pnpm run format && pnpm run lint:fix",
		"format": "pnpm exec prettier . --write",
		"lint": "pnpm exec eslint",
		"lint:fix": "pnpm exec eslint --fix",
		"lint:watch": "pnpm exec eslint --watch",
		"start": "node ./public/app.js",
		"test": "pnpm exec vitest",
		"test:watch": "pnpm exec vitest --watch",
		"tsc:scan": "pnpm exec tsc --noEmit",
		"watch:build": "tsc --build tsconfig.build.json && pnpm exec rollup -c --watch",
		"watch:format": "pnpm exec prettier . --write --watch",
		"watch:lint": "pnpm exec eslint --watch"
	},
	"devDependencies": {
		"@rollup/plugin-dynamic-import-vars": "^2.1.5",
		"@types/jest": "^29.5.14",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"@typescript-eslint/eslint-plugin": "^8.28.0",
		"@typescript-eslint/parser": "^8.28.0",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-jest": "^28.11.0",
		"eslint-plugin-prettier": "^5.2.4",
		"eslint-plugin-react": "^7.37.4",
		"eslint-plugin-react-hooks": "^5.2.0",
		"fake-indexeddb": "^6.0.0",
		"jsdom": "^25.0.1",
		"prettier": "^3.5.3",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "^5.8.2",
		"vitest": "^3.0.9"
	},
	"dependencies": {
		"@rollup/plugin-commonjs": "^28.0.3",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-typescript": "^12.1.2",
		"idb": "^8.0.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"rollup": "^4.37.0",
		"source-map-support": "^0.5.21"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
